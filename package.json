{
  "name": "monk-api",
  "version": "2.0.0",
  "description": "Lightweight PaaS backend API built with Hono",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "tsx watch src/index.ts",
    "compile": "scripts/compile.sh",
    "autoinstall": "scripts/autoinstall.sh",
    "spec": "scripts/spec.sh",
    "spec:ts": "scripts/spec-ts.sh",
    "spec:sh": "scripts/spec-sh.sh",
    "test": "scripts/spec.sh",
    "fixtures:build": "scripts/fixtures-build.sh",
    "fixtures:clean": "scripts/fixtures-clean.sh",
    "fixtures:list": "scripts/fixtures-list.sh",
    "fixtures:test": "npx tsx src/scripts/test-template-data.ts",
    "fixtures:prepare": "npm run compile && npm run fixtures:build",
    "docker:dev": "docker compose up --build",
    "docker:dev:daemon": "docker compose up --build -d",
    "docker:dev:with-data": "docker compose -f docker-compose.dev-with-data.yml up --build",
    "docker:dev:with-data:daemon": "docker compose -f docker-compose.dev-with-data.yml up --build -d",
    "docker:prod": "docker compose -f docker-compose.prod.yml up --build",
    "docker:stop": "docker compose down",
    "docker:stop:with-data": "docker compose -f docker-compose.dev-with-data.yml down",
    "docker:clean": "docker compose down -v && docker system prune -f",
    "docker:clean:with-data": "docker compose -f docker-compose.dev-with-data.yml down -v",
    "docker:logs": "docker compose logs -f monk-api",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "preversion": "npm run compile && npm run spec",
    "postversion": "git push && git push --tags && gh release create v$npm_package_version --generate-notes"
  },
  "keywords": [
    "hono",
    "api",
    "paas",
    "typescript",
    "postgresql"
  ],
  "author": "Ian Zepp",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@types/bcrypt": "^6.0.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "bcrypt": "^6.0.0",
    "hono": "^4.6.5",
    "js-yaml": "^4.1.0",
    "pg": "^8.16.3",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22",
    "@types/pg": "^8.15.5",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
