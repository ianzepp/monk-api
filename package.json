{
    "name": "monk-api",
    "version": "4.0.1",
    "description": "Lightweight PaaS backend API built with Hono",
    "agents": "IMPORTANT: Before starting ANY task, READ ./AGENTS.md for project-specific instructions and patterns",
    "main": "dist/index.js",
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "start": "bun dist/index.js",
        "start:dev": "bun --watch src/index.ts",
        "stop": "pkill -f 'bun.*index' || true",
        "build": "bun run build:packages && scripts/build.sh",
        "build:packages": "bun run --filter '*' build",
        "build:spec": "scripts/build-spec.sh",
        "autoinstall": "scripts/autoinstall.sh",
        "install:db": "scripts/install-db.sh",
        "fixtures:build": "bun scripts/fixtures-build.ts",
        "fixtures:deploy": "bun scripts/fixtures-deploy.ts",
        "fixtures:generate": "bun scripts/fixtures-generate.ts",
        "fixtures:lock": "scripts/fixtures-lock.sh",
        "tenant:create": "bun scripts/tenant-create.ts",
        "tenant:delete": "bun scripts/tenant-delete.ts",
        "test": "scripts/test-ts.sh \"$@\"",
        "test:unit": "vitest --config vitest.unit.config.ts",
        "test:bench": "vitest bench --config vitest.bench.config.ts"
    },
    "keywords": [
        "hono",
        "api",
        "paas",
        "typescript",
        "postgresql"
    ],
    "author": "Ian Zepp",
    "license": "MIT",
    "dependencies": {
        "@toon-format/toon": "^1.0.0",
        "hono": "^4.6.5",
        "js-yaml": "^4.1.1",
        "pg": "^8.16.3"
    },
    "optionalDependencies": {
        "@monk/formatter-brainfuck": "file:./packages/formatter-brainfuck",
        "@monk/formatter-csv": "file:./packages/formatter-csv",
        "@monk/formatter-grid-compact": "file:./packages/formatter-grid-compact",
        "@monk/formatter-markdown": "file:./packages/formatter-markdown",
        "@monk/formatter-morse": "file:./packages/formatter-morse",
        "@monk/formatter-msgpack": "file:./packages/formatter-msgpack",
        "@monk/formatter-qr": "file:./packages/formatter-qr",
        "@monk/formatter-toml": "file:./packages/formatter-toml",
        "@monk/mcp": "file:./packages/mcp",
        "archiver": "^7.0.1",
        "unzipper": "^0.12.3"
    },
    "devDependencies": {
        "@faker-js/faker": "^10.0.0",
        "@modelcontextprotocol/sdk": "^1.22.0",
        "@types/archiver": "^7.0.0",
        "@types/bun": "^1.3.3",
        "@types/js-yaml": "^4.0.9",
        "@types/pg": "^8.15.5",
        "@types/unzipper": "^0.10.11",
        "tsc-alias": "^1.8.16",
        "typescript": "^5.6.3",
        "vitest": "^3.2.4"
    },
    "engines": {
        "bun": ">=1.0.0"
    }
}
