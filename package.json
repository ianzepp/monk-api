{
    "name": "monk-api",
    "version": "2.0.0-rc4",
    "description": "Lightweight PaaS backend API built with Hono",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "start": "node dist/index.js",
        "start:bg": "scripts/start-bg.sh",
        "start:dev": "npm run build && concurrently \"npm run build:watch\" \"node --watch dist/index.js\"",
        "stop": "pkill -f 'node.*dist/index.js' || pkill -f 'nodemon.*build' || true",
        "build": "scripts/build.sh",
        "build:watch": "nodemon --watch src --ext ts --exec 'npm run build'",
        "build:spec": "scripts/build-spec.sh",
        "autoinstall": "scripts/autoinstall.sh",
        "fixtures:build": "scripts/fixtures-build.sh",
        "fixtures:generate": "node scripts/fixtures-generate.js",
        "fixtures:lock": "scripts/fixtures-lock.sh",
        "fixtures:deploy": "node vendors/neon/fixtures-deploy.js",
        "test:sh": "scripts/test-sh.sh \"$@\"",
        "test:ts": "scripts/test-ts.sh \"$@\"",
        "test:cleanup": "scripts/test-cleanup.sh",
        "version:patch": "npm version patch",
        "version:minor": "npm version minor",
        "version:major": "npm version major",
        "preversion": "npm run build && npm run test:sh",
        "postversion": "git push && git push --tags && gh release create v$npm_package_version --generate-notes"
    },
    "keywords": [
        "hono",
        "api",
        "paas",
        "typescript",
        "postgresql"
    ],
    "author": "Ian Zepp",
    "license": "MIT",
    "dependencies": {
        "@hono/node-server": "^1.13.7",
        "@types/bcrypt": "^6.0.0",
        "ajv": "^8.17.1",
        "ajv-formats": "^3.0.1",
        "bcrypt": "^6.0.0",
        "dotenv": "^17.2.1",
        "hono": "^4.6.5",
        "pg": "^8.16.3",
        "zod": "^4.0.17"
    },
    "devDependencies": {
        "@faker-js/faker": "^10.0.0",
        "@types/node": "^22",
        "@types/pg": "^8.15.5",
        "concurrently": "^9.2.1",
        "nodemon": "^3.1.10",
        "tsc-alias": "^1.8.16",
        "tsx": "^4.19.2",
        "typescript": "^5.6.3",
        "vitest": "^3.2.4"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
