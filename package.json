{
    "name": "monk-api",
    "version": "4.7.0",
    "description": "Lightweight PaaS backend API built with Hono",
    "agents": "IMPORTANT: Before starting ANY task, READ ./AGENTS.md for project-specific instructions and patterns",
    "main": "dist/index.js",
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "start": "bun dist/index.js",
        "start:dev": "bun --watch src/index.ts",
        "stop": "pkill -f 'bun.*index' || true",
        "build": "bun run build:packages && scripts/build.sh",
        "build:packages": "bun run --filter '*' build",
        "build:spec": "scripts/build-spec.sh",
        "test": "vitest run",
        "test:unit": "vitest run --config vitest.unit.config.ts",
        "test:bench": "vitest bench --config vitest.bench.config.ts",
        "build:standalone": "scripts/build-standalone.sh"
    },
    "keywords": [
        "hono",
        "api",
        "paas",
        "typescript",
        "postgresql"
    ],
    "author": "Ian Zepp",
    "license": "MIT",
    "dependencies": {
        "hono": "^4.6.5",
        "js-yaml": "^4.1.1",
        "pg": "^8.16.3"
    },
    "optionalDependencies": {
        "@monk/formatter-brainfuck": "file:./packages/formatter-brainfuck",
        "@monk/formatter-csv": "file:./packages/formatter-csv",
        "@monk/formatter-grid-compact": "file:./packages/formatter-grid-compact",
        "@monk/formatter-markdown": "file:./packages/formatter-markdown",
        "@monk/formatter-morse": "file:./packages/formatter-morse",
        "@monk/formatter-msgpack": "file:./packages/formatter-msgpack",
        "@monk/formatter-qr": "file:./packages/formatter-qr",
        "@monk/formatter-toml": "file:./packages/formatter-toml",
        "@monk/formatter-toon": "file:./packages/formatter-toon",
        "@monk/bindings": "file:./packages/bindings",
        "@monk-app/grids": "file:./packages/grids",
        "@monk-app/mcp": "file:./packages/mcp",
        "@monk-app/openapi": "file:./packages/openapi",
        "@monk-app/todos": "file:./packages/todos"
    },
    "devDependencies": {
        "@faker-js/faker": "^10.0.0",
        "@modelcontextprotocol/sdk": "^1.22.0",
        "@types/bun": "^1.3.3",
        "@types/js-yaml": "^4.0.9",
        "@types/pg": "^8.15.5",
        "tsc-alias": "^1.8.16",
        "typescript": "^5.6.3",
        "vitest": "^3.2.4"
    },
    "engines": {
        "bun": ">=1.0.0"
    }
}
