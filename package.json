{
  "name": "monk-api",
  "version": "2.0.0-rc2",
  "description": "Lightweight PaaS backend API built with Hono",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "tsx watch src/index.ts",
    "compile": "scripts/compile.sh",
    "compile:spec": "scripts/compile-spec.sh",
    "autoinstall": "scripts/autoinstall.sh",
    "spec": "scripts/spec.sh",
    "spec:ts": "scripts/spec-ts.sh",
    "spec:sh": "scripts/spec-sh.sh",
    "test": "scripts/spec.sh",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "preversion": "npm run compile && npm run spec",
    "postversion": "git push && git push --tags && gh release create v$npm_package_version --generate-notes"
  },
  "keywords": [
    "hono",
    "api",
    "paas",
    "typescript",
    "postgresql"
  ],
  "author": "Ian Zepp",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@types/bcrypt": "^6.0.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "bcrypt": "^6.0.0",
    "hono": "^4.6.5",
    "pg": "^8.16.3",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/pg": "^8.15.5",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
