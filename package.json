{
  "name": "monk-api",
  "version": "1.0.0",
  "description": "Lightweight PaaS backend API and CLI built with Hono",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "monk": "./bin/monk"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "scripts/verify-config.sh && tsc",
    "start": "node dist/index.js",
    "pretest": "scripts/verify-config.sh",
    "test": "monk test dev \"$(pwd)\"",
    "test:unit": "vitest",
    "test:run": "vitest run",
    "hono:start": "scripts/hono-start.sh",
    "hono:stop": "scripts/hono-stop.sh",
    "hono:restart": "scripts/hono-restart.sh",
    "hono:status": "scripts/hono-status.sh",
    "hono:list": "scripts/hono-list.sh",
    "hono:killall": "scripts/hono-killall.sh"
  },
  "keywords": [
    "hono",
    "api",
    "paas",
    "typescript",
    "postgresql"
  ],
  "author": "Ian Zepp",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@types/bcrypt": "^6.0.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "bcrypt": "^6.0.0",
    "hono": "^4.6.5",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "pg": "^8.16.3",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.20",
    "@types/node": "^22",
    "@types/pg": "^8.15.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
